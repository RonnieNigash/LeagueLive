source 'https://rubygems.org'

gem 'rails', '3.2.11'

# Database
gem 'sqlite3'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  # Emails are opened in a browser
  gem 'letter_opener'

  # Error screen. Important that these two stay in
  # Development group.
  gem 'better_errors'
  gem 'binding_of_caller'
end

# Frontend
gem 'jquery-rails'
gem 'slim'

# Backend
gem 'useragent'

# User Account
gem 'devise'


# To use Jbuilder templates for JSON
# gem 'jbuilder'
